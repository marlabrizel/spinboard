<div class="container">
  <div class="row">
    <div class="col-md-12 new-link">
      <h2 class="title">Submit a new link</h2>
      <%= form_for @link do |f| %>
        <%= f.label :title, "Title", class: "form-label" %>
        <%= f.text_field :title, class: "form-control" %>
        <%= f.label :valid_url, "URL", class: "form-label" %>
        <%= f.text_field :valid_url, class: "form-control" %>
        <%= f.submit "Submit", class: "btn btn-default new-idea-button", id: "new-link-submit"%>
      <% end %>
    </div>
    <div class="all-links">
      <% if @links %>
        <h2>My Links</h2>
        <% @links.each do |link| %>
          <p>
            <strong>Title: </strong><%= link.title %>  <strong>URL: </strong><%= link.valid_url %> |
            <%= (link_to "Mark as read", mark_read_link_path(link), method: :put) if link.read_status == false %>
            <%= "(READ)" if link.read_status == true %> <%= (link_to "Mark as unread", mark_unread_link_path(link), method: :put) if link.read_status == true %>
            <%= button_to "Edit", edit_link_path(link), method: :get %>
          </p>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
